<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <!--TextAppearance-->

    <style name="TextAppearance.White.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextAppearance.Black.Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextAppearance.White.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextAppearance.Black.Body1" parent="TextAppearance.AppCompat.Body1">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="TextAppearance.White.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#FFFFFF</item>
    </style>

    <style name="TextAppearance.Black.Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="NormalTextAppearance.White" parent="TextAppearance.White.Body1"/>

    <style name="NormalTextAppearance.Black" parent="TextAppearance.Black.Body1"/>

    <style name="LargeTextAppearance.White" parent="TextAppearance.White.Medium"/>

    <style name="LargeTextAppearance.Black" parent="TextAppearance.Black.Medium"/>

    <style name="LargeTextAppearance.Grey" parent="TextAppearance.Black.Medium">
        <item name="android:textColor">#888888</item>
    </style>

    <style name="SmallTextAppearance.White" parent="TextAppearance.White.Small"/>

    <style name="SmallTextAppearance.Black" parent="TextAppearance.Black.Small"/>

    <style name="SmallTextAppearance.Grey" parent="TextAppearance.Black.Small">
        <item name="android:textColor">#888888</item>
    </style>

    <style name="TabTextAppearance" parent="NormalTextAppearance.White">
        <item name="android:textAllCaps">false</item>
    </style>

</resources>
