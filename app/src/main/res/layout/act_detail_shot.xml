<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <co.lujun.androidtagview.TagContainerLayout
                    android:id="@+id/tags_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    app:container_background_color="#FFFFFF"
                    app:container_border_radius="0dp"
                    app:horizontal_interval="8dp"
                    app:tag_background_color="#FFFFFF"
                    app:tag_border_color="@color/color_pro"
                    app:tag_border_width="1dp"
                    app:tag_clickable="false"
                    app:tag_corner_radius="1dp"
                    app:tag_max_length="18"
                    app:tag_text_color="#000000"
                    app:tag_text_size="14sp"
                    app:tag_theme="none"
                    app:vertical_interval="8dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp"/>

                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/img_shot"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/app_name"
                    fresco:viewAspectRatio="1.33"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="16dp"/>

                <io.lhyz.android.boilerplate.view.RobotoTextView
                    android:id="@+id/tv_description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:padding="8dp"
                    android:text="@string/app_name"
                    android:textAppearance="@style/BlackTextAppearance"/>
            </LinearLayout>
        </ScrollView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <io.lhyz.android.boilerplate.view.RobotoButton
                    android:id="@+id/action_comments"
                    style="?attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_forum_black_24dp"
                    android:text="@string/actions_comments"
                    android:textAppearance="@style/ButtonTextAppearance"/>

                <io.lhyz.android.boilerplate.view.RobotoButton
                    android:id="@+id/action_likes"
                    style="?attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_favorite_black_24dp"
                    android:text="@string/actions_likes"
                    android:textAppearance="@style/ButtonTextAppearance"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>
</android.support.design.widget.CoordinatorLayout>