<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tag="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/texture_bg"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/img_shot"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:contentDescription="@string/app_name"
            fresco:viewAspectRatio="1.33"/>

        <co.lujun.androidtagview.TagContainerLayout
            android:id="@+id/tags_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/img_shot"
            android:background="@android:color/white"
            android:padding="10dp"
            tag:container_enable_drag="false"
            tag:horizontal_interval="10dp"
            tag:tag_clickable="true"
            tag:tag_theme="pure_cyan"
            tag:vertical_interval="10dp"/>

        <View
            android:id="@+id/view_separator_1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/tags_view"
            android:background="@color/color_pro"/>

        <View
            android:id="@+id/view_separator_2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/img_shot"
            android:background="@color/color_pro"/>

        <io.lhyz.android.boilerplate.view.RobotoTextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/view_separator_2"
            android:background="@android:color/white"
            android:maxLines="3"
            android:padding="8dp"
            android:text="@string/app_name"
            android:textAppearance="@style/BlackTextAppearance"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <io.lhyz.android.boilerplate.view.RobotoButton
                    android:id="@+id/action_comments"
                    style="?attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_forum_black_24dp"
                    android:text="@string/actions_comments"
                    android:textAppearance="@style/ButtonTextAppearance"/>

                <io.lhyz.android.boilerplate.view.RobotoButton
                    android:id="@+id/action_likes"
                    style="?attr/buttonBarButtonStyle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/ic_favorite_black_24dp"
                    android:text="@string/actions_likes"
                    android:textAppearance="@style/ButtonTextAppearance"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>